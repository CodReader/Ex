<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN"
        "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="com.bogdan.liferay.horseapp.service">
    <namespace>FOO</namespace>
    <!-- <entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false"
             session-factory="sampleSessionFactory" table="foo">-->
    <entity data-source="sampleDataSource" session-factory="sampleSessionFactory" table="foo" local-service="true"
            name="Foo" remote-service="true" uuid="false">
        <!-- PK fields -->

        <column name="fooId" primary="true" type="long"/>

        <!-- Group instance -->

        <column name="groupId" type="long"/>
        <!-- <column name="companyId" type="long"/>-->

        <!-- Audit fields -->
        <column name="companyId" type="long"/>
        <column name="userId" type="long"/>
        <column name="createDate" type="Date"/>
        <column name="modifiedDate" type="Date"/>
        <column name="horseId" type="uuid"/>
        <column name="modelSpeed" type="int"/>

        <!-- test Status fields -->

        <column name="status" type="int"/>
        <column name="statusByUserId" type="long"/>
        <column name="statusByUserName" type="String"/>
        <column name="statusDate" type="Date"/>


        <!-- order-->

        <order by="asc">
            <order-column name="createDate" order-by="desc"/>
        </order>

        <!-- Finder methods -->

        <finder name="GroupId" return-type="Collection">
            <finder-column name="groupId"/>
            <finder-column name="status"/>
        </finder>

    </entity>
</service-builder>


